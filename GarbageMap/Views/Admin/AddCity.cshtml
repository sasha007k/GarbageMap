@model GarbageMap.Models.ViewModels.AddCityViewModel

<div>
    <form asp-controller="Admin" asp-action="AddCity" method="post">
        <div class="col-md-12">
            
            <div class="form-group row">
                <div class="form-check form-check-inline">
                    <input id="inputId" name="inputId" asp-for="AddType" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="Region" checked>
                    <label class="col-md-6 form-check-label" for="exampleRadios1">
                        Region
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input id="inputId" name="inputId" asp-for="AddType" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="District">
                    <label class="col-md-6 form-check-label" for="exampleRadios2">
                        District
                    </label>
                </div>
            </div>

            <div id="RegionDiv" class="form-group row">
                <label class="col-md-6 col-form-label font-weight-bold">Select region</label>
                <select class="col-md-6 form-control" asp-for="RegionId" asp-items="@ViewData["RegionsList"] as SelectList"></select>
            </div>

            <div id="DistrictDiv" class="form-group row">
                <label class="col-md-6 col-form-label font-weight-bold">Select district</label>
                <select class="col-md-6 form-control" asp-for="DistrictId" asp-items="@ViewData["DistrictsList"] as SelectList"></select>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-md-6 col-form-label font-weight-bold"></label>
                <input class="col-md-6 form-control" asp-for="Name" type="text"/>
            </div>

            <div class="form-group row">
                <label asp-for="Index" class="col-md-6 col-form-label font-weight-bold"></label>
                <input class="col-md-6 form-control" asp-for="Index" type="number"/>
            </div>

            <div class="form-group row">
                <button class="btn btn-primary col-md-4" type="submit" style="position: absolute; right: 0;">Add</button>
            </div>
        </div>
    </form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("input[name*=inputId]").click(function () {
            if ($(this).val().indexOf("Region")>=0){
                $("div[id*=RegionDiv]").show();
                $("div[id*=DistrictDiv]").hide();
            }
            else{
                $("div[id*=RegionDiv]").hide();
                $("div[id*=DistrictDiv]").show();
                }

        });

        $("input[name*=inputId]").before(function () {
            $("div[id*=DistrictDiv]").hide();
        });
    });
</script>