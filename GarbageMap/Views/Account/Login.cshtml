@model GarbageMap.Models.ViewModels.LoginViewModel

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
<link rel="stylesheet" href="mdb/css/bootstrap.min.css">
<link rel="stylesheet" href="mdb/css/mdb.min.css">
<link rel="stylesheet" href="mdb/css/style.css">

<script type="text/javascript" src="mdb/js/jquery.min.js"></script>
<script type="text/javascript" src="mdb/js/popper.min.js"></script>
<script type="text/javascript" src="mdb/js/bootstrap.min.js"></script>
<script type="text/javascript" src="mdb/js/mdb.min.js"></script>


<section class="container" id="mainsec">
    <section class="row justify-content-center">
        <section class="col-12 col-sm-5 col-md-5">
            <div class="card mt-5 p-0 ml-2">

                <h5 class="card-header default-color white-text text-center py-4" style="background: #17a2b8; color: white">
                    <strong>Log in</strong>
                </h5>

                <div class="card-body px-lg-5" id="registerform">

                    <form class="text-center" style="color: #757575;" method="post" asp-controller="Account" asp-action="Login">

                        <div class="md-form">
                            <input asp-for="Email" type="email" id="formemail" name="Email" class="form-control forminput">
                            <label for="formemail">Email</label>
                        </div>

                        <div class="md-form">
                            <input asp-for="Password" type="password" id="formpassword" name="Password" class="form-control forminput">
                            <label for="frompassword">Password</label>
                        </div>
                        
                        <div class="d-flex justify-content-around">
                            <div>
                                <div class="form-check">
                                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="materialLoginFormRemember">
                                    <label class="form-check-label" for="materialLoginFormRemember">Remember me</label>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Log in</button>

                        <p>
                            Not a member?
                            <a asp-controller="Account" asp-action="Register">Register</a>
                        </p>

                    </form>
                </div>
            </div>
        </section>
    </section>
</section>