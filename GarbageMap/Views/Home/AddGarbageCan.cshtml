@model GarbageMap.Models.ViewModels.AddGarbageCanViewModel

@{
    var a = Model;

}

<div>
    <form asp-controller="Home" asp-action="AddGarbageCan">

        <div class="col-md-12">

            <input class="col-md-6 form-control" asp-for="CameraPlaceId" type="number" hidden value="@Model.CameraPlaceId"/>


            <div class="form-group row">
                <label class="col-md-6 col-form-label font-weight-bold">Select can</label>
                <select class="col-md-6 form-control" asp-for="GarbageCanTypeId" asp-items="@ViewData["GarbageCanTypesList"] as SelectList"></select>
            </div>

            <div class="form-group row">
                <button class="btn btn-primary col-md-4" type="submit" style="position: absolute; right: 0;">Add</button>
            </div>
        </div>
    </form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.js" type="text/javascript"></script>