</head>
<body>
    @if (User.IsInRole("organization"))
    {
        <p>
            @Html.ActionLink("Add Camera", "AddCamera", "Home", new { },
                new { @class = "viewDialog btn btn-light", data_dialog_title = "Add Camera" })
